function myfunction(val){
	var element=document.getElementById('theory');
	var element1=document.getElementById('Practical');
	if (val=="Analog Communication"){
		element.value="30";
		element1.value="40";
	}else if (val=="Digital Communication"){
		element.value="42";
		element1.vlaue="63";
	}else if(val=="Java"){
		element.value="78";
		element1.value="98";
	}else if(val=="HTML"){
		element.value="38";
		element1.value="16";
	}else if(val=="CSS"){
		element.value="12";
		element.value="20";
	}else if(val=="Spring"){
		element.value="43";
		element1.value="20";
	}
}

</script>
