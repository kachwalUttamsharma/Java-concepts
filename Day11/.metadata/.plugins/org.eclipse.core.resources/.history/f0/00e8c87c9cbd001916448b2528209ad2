<!DOCTYPE html>
<html>
<head>
<script>
	function attdemo(){
		var res = "";
		if(frmAtt.chkAnisha.checked==true){
			res+="Anisha is Present <br/>";
		}else{
			res+="Anisha is Absent <br/>"
		}
		if(frmAtt.chkRishab.checked==true){
			res+="Rishab is Present <br/>";
		}else{
			res+="Rishab is Absent <br/>"
		}
		document.getElementById("res").innerHTML = res;
	}
	
</script>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
	<form name = "frmAtt">
		<center>
			Anisha :
			<input type = "checkbox" name = "chkAnisha" onchange = "attdemo()"/>
			<br/><br/>
			Rishab :
			<input type = "checkbox" name = "chkRishab" onchange = "attdemo()"/>
			<br/><br/>
			Laksh :
			<input type = "checkbox" name = "chkLaksh"/>
			<br/><br/>
			Raghu :
			<input type = "checkbox" name = "chkRaghu"/>
			<br/><br/>
			<span id = "res">
			
			
			</span>
		</center>
	</form>
</body>
