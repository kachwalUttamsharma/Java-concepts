 }
 function sub(){
	 var a,b,c;
	 a=parseInt(frmCalc.frmFirstNo.value);
	 b=parseInt(frmCalc.frmSecondNo.value);
	 c=a+b;
	 frmCalc.Result.value=c;
 }
 function mult(){
	 var a,b,c;
	 a=parseInt(frmCalc.frmFirstNo.value);
	 b=parseInt(frmCalc.frmSecondNo.value);
	 c=a+b;
	 frmCalc.Result.value=c;
 }
</script>

